---

import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { THINGS } from "@consts";
import { Content as Things } from "../things/things-content.mdx";

---

<PageLayout title={THINGS.TITLE} description={THINGS.DESCRIPTION}>
  <Container>
    <h1 class="animate font-bold text-black dark:text-white">
      {THINGS.TITLE}
    </h1>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <Things />
        </article>
      </section>
  </Container>
</PageLayout>
